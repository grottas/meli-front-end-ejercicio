<% if (categories && categories.length > 0) { %>
    <ol id="breadcrumb" class="full-body-content">
        <% for (var i=0; i < categories.length; i++) { %>
        <li><%= categories[i] %></li>
        <% } %>
    </ol>
<% } %>


<div id="item" class="full-body-content">
    <div id="item-main"><div class="item-picture">
            <div class="picture-spacer">
                <% if (item.picture) { %>
                    <img src="<%= item.picture %>">
                <% } else { %>
                    <div class="no-img"></div>
                <% } %>
            </div>
        </div><div class="item-main-info">
            <p class="condition-and-sold-quantity">
                <%= item.conditionAndSoldQuantity %>
            </p>
            <h1><%= item.title %></h1>
            <p class="price">
                <%= item.price %><span class="decimals"><%= item.decimals %></span>
            </p>
            <button class="buy-btn">
                Comprar
            </button>
        </div></div>
    <div id="item-description">
        <h2>Descripci√≥n del producto</h2>
        <div id="description">
            <%= item.description %>
        </div>
    </div>
</div>