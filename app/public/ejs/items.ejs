<% if (categories && categories.length > 0) { %>
    <ol id="breadcrumb" class="full-body-content">
        <% for (var i=0; i < categories.length; i++) { %>
            <li><%= categories[i] %></li>
        <% } %>
    </ol>
<% } %>

<% if (results.length > 0) { %>
    <ol id="results" class="full-body-content">
        <% for (var i=0; i < results.length; i++) {
            var result = results[i]; %>
            <a href="<%= result.id ? './item/' + result.id : '' %>">
                <li class="result">
                    <div style="background-image: url(<%= result.picture %>);" class="thumbnail"></div>
                    <p class="price">
                        <%= result.price %><span class="decimals">
                            <%= result.decimals %>
                        </span>
                        <% if (result.free_shiping) { %>
                            <img src="../images/shipping.png" class="shipping">
                        <% } %>
                    </p>
                    <p class="address"><%= result.address %></p>
                    <h1><%= result.title %></h1>
                </li>
            </a>
        <% } %>
    </ol>
<% } else { %>
    <div id="error" class="full-body-content">
        <div class="center-content">
            <h1>No hay publicaciones que coincidan con tu busqueda</h1>
            <ul id="suggested-actions">
                <li>Revisa la ortografía de la palabra.</li>
                <li>Utiliza palabras más genéricas o menos palabras.</li>
            </ul>
        </div>
    </div>
<% } %>
